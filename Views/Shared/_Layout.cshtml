<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu portifolio Pessoal</title>
    @Styles.Render("~/Content/fontawesome-free/css/all.min.css")
    @Styles.Render("~/Content/creative.min.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top pt-4" id="mainNav">
        <div class="container">
            @Html.ActionLink("Ariane Lima", "home", "Home", new { @class = "navbar-brand text-white" })
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto my-2 my-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "home", new { Controller="Home" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Projetos", "projetos", new { Controller="Home" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Skills", "skills", new { Controller="Home" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contato", "contact", new { Controller="Home" }, new { @class = "nav-link" })
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    
    <h4 class="bold" style="color:#FFF">Criação de Sites</h4>

    <div class="container body-content">
        @RenderBody()
        <hr />

    
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    @Scripts.Render("~/Scripts/jquery/jquery.min.js")
    @Scripts.Render("~/Scripts/bootstrap/js/bootstrap.bundle.min.js")
    @Scripts.Render("~/Scripts/jquery-easing/jquery.easing.min.js")
    @Scripts.Render("~/Scripts/magnific-popup/jquery.magnific-popup.min.js")
    @Scripts.Render("~/Scripts/creative.min.js")
    @RenderSection("scripts", required: false)

</body>
</html>
